rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ユーザーは自分のドキュメントのみ読み書き可能
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 組織は所有者のみ読み書き可能
    match /organizations/{orgId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == orgId || 
         request.auth.uid == resource.data.ownerId);
    }
    
    // 従業員は組織の所有者のみ読み書き可能
    match /employees/{employeeId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.organizationId ||
         (request.auth.uid != null && request.data.organizationId == request.auth.uid));
    }
    
    // シフト希望は組織の所有者のみ読み書き可能
    match /shiftRequests/{requestId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.organizationId ||
         (request.auth.uid != null && request.data.organizationId == request.auth.uid));
    }
    
    // シフトは組織の所有者のみ読み書き可能
    match /shifts/{shiftId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.organizationId ||
         (request.auth.uid != null && request.data.organizationId == request.auth.uid));
    }
    
    // テスト環境では一時的に全てを許可（本番では削除する）
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
